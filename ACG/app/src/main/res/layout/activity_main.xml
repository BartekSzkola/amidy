<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">

        <view
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            class="com.example.saira_000.myapplication.Figura"
            android:id="@+id/view"
            android:contentDescription="@string/kolo" />

        <view
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            class="com.example.saira_000.myapplication.Figura"
            android:id="@+id/view2"
            android:contentDescription="@string/elipsa"
            />

        <view
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            class="com.example.saira_000.myapplication.Figura"
            android:id="@+id/view3"
            android:contentDescription="@string/prostokat"
            />

        <view
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            class="com.example.saira_000.myapplication.Figura"
            android:id="@+id/view4"
            android:contentDescription="@string/prostokat_okragly"
            />

        <view
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            class="com.example.saira_000.myapplication.Figura"
            android:id="@+id/view5"
            android:contentDescription="@string/luk"
            />

        <view
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            class="com.example.saira_000.myapplication.Figura"
            android:id="@+id/view6"
            android:contentDescription="@string/linia"
            />

    </LinearLayout>
</ScrollView>